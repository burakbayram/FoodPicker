@using Entity
@model  IEnumerable<Food>

@{
    ViewBag.Title = "Index";
}

@*<style>
        .modal-content{
            height:300px;
            width:300px;
        }
    </style>*@
<div class="widget has-shadow">
    <div class="widget-header bordered no-actions d-flex align-items-center">
        <h4>Food List</h4>
    </div>
    <div class="widget-body">
        <div class="table-responsive">
            <table id="sorting-table" class="table mb-0">
                <thead>
                    <tr>
                        <th>Food Name</th>
                        <th>Restaurant</th>
                        <th>Price</th>
                        <th>Healty</th>
                        <th><span style="width:100px;">Food Type</span></th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var food in Model)
                    {
                        <tr>
                            <td>
                                @if (food.ImageURL != null)
                                {
                                    <a data-toggle="modal" data-target="#myModal-@food.Id">
                                            <i class="la la-camera la-lg"></i>
                                    </a>
                                    <div class="modal" id="myModal-@food.Id">
                                        <div class="modal-dialog modal-dialog-centered">
                                            <div class="modal-content">
                                                <div class="modal-body">
                                                    <img src="/Content/Uploads/@food.ImageURL" height="170" width="170" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                                @food.FoodName
                            </td>
                            <td>@food.Restaurant.RestaurantName</td>
                            <td>@food.Price</td>
                            <td>
                                @if (food.IsHealty)
                                {
                                    <span class="la la-heart-o"></span>
                                }
                            </td>
                            <td><span style="width:100px;"><span class="badge-text badge-text-small info">@food.FoodType</span></span></td>
                            <td class="td-actions">
                                <a href="/Food/EditFood/@food.Id"><i class="la la-edit edit"></i></a>
                                <a href="/Food/DeleteFood/@food.Id"><i class="la la-close delete"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>